<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">

  <!-- Meta viewport -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <!-- Bootstrap core CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
  <!-- Material Design Bootstrap -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.0/css/mdb.min.css" rel="stylesheet">

  <!-- Custom CSS Link -->
  <link rel="stylesheet" href="/css/index.css">

  <!-- JQuery -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <!-- Bootstrap tooltips -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.13.0/umd/popper.min.js"></script>
  <!-- Bootstrap core JavaScript -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <!-- MDB core JavaScript -->
  <!-- <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.0/js/mdb.min.js"></script> -->

  <!-- Custom CSS Link -->
  <link rel="stylesheet" href="/css/index.css">

  <title>Planny</title>
</head>

<body>
  <!-- Header -->
  <div class="d-flex align-items-center justify-content-around default_header">
    <h1>Planny</h1>
    {{#if loggedIn}}
      <form action="/users/logout" method="post">
        <button class="btn" type="submit" id="logout_bt">Logout</button>
      </form>
    {{/if}}
  </div>

  <!-- Welcome message to user -->
  <div class="d-flex p-2 align-items-center justify-content-center flex-column homepage_welcome_message">
    <h1><b>Welcome back {{username}}!</b></h1>
  </div>

  <!-- Itinerary list / Create new itinerary -->
  <div class="d-flex p-2 align-items-center justify-content-center homepage_body">
    <!-- User's itinerary list -->
    <div class="card">
      <div class="d-flex align-items-center justify-content-start flex-column card-body">
        <p class="h4 text-center myPlan_text">My Plans</p>
        {{#each plan_list}}
          <div class="d-flex align-items-center justify-content-center card" id="destination_card">
            <a href="/itineraries/homepage/{{this}}"><h1>{{this}}</h1></a>
          </div>
        {{/each}}
      </div>
    </div>

    <!-- Vertical Line Separator -->
    <div class="vl"></div>

    <!-- Create new itinerary button -->
    <button class="btn" id="new_plan_bt" data-toggle="modal" data-target="#chooseDestinationModal">New Plan</button>
  </div>

  <!-- Modal Content for creating new plan -->
  <div class="modal fade" id="chooseDestinationModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-notify modal-warning" role="document">
      <!--Content-->
      <div class="modal-content">
        <!--Header-->
        <div class="modal-header text-center">
          <h4 class="modal-title white-text w-100 font-weight-bold py-2">New Plan</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true" class="white-text">&times;</span>
          </button>
        </div>

        <!--Body-->
        <div class="modal-body">
          <form class="md-form mb-5" method="post" action="/itineraries">
            <h5>Go Where ?<input type="text" name="destination" class="form-control validate" placeholder="Name of place"></h5>
            <h5>Start Date<input type="date" name="start_date" class="form-control validate"></h5>
            <h5>End Date<input type="date" name="end_date" class="form-control validate"></h5>
            <div class="d-flex justify-content-center">
              <button class="btn btn-outline-warning waves-effect" type="submit" name="submit">Let's Go</button>
            </div>
          </form>
        </div>
      </div>
      <!--/.Content-->
    </div>
  </div>
</body>

</html>
